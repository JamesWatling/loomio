.clearfix
  .large-icon.topic-icon
  %h1#motion-close_date
    = motion.close_date
  #edit-motion-close_date.hidden
    = form_tag send("edit_close_date_motion_path"), :remote => true do |f|
      = hidden_field_tag 'id'
      .control-group
        = text_field_tag 'close_date', motion.close_date, {id: 'motion-input', class: 'inputError limit-150'}
        .character-counter
      .save-buttons.clearfix
        = submit_tag "Save", class: 'btn btn-small run-validations', id: 'edit-close_date-submit', :data => {:disable_with => "Saving"}
        = link_to "Cancel", "#", id: 'cancel-edit-close_date'
  .dropdown
    = link_to image_tag("dropdown.png"), "#", class: "dropdown-toggle", 'data-toggle' => 'dropdown'
    %ul.dropdown-menu.pull-right
      %li= link_to "Edit motion close_date", "#", :id => "edit-close_date"
